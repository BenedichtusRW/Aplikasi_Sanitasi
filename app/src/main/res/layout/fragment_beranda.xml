<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Judul dengan kapsul biru -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <!-- Kapsul biru -->

            <!-- Teks LaporAir di atas kapsul -->
            <TextView
                android:id="@+id/tvCapsule"
                android:layout_width="206dp"
                android:layout_height="48dp"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:paddingVertical="3dp"
                android:paddingHorizontal="24dp"
                android:background="@drawable/bg_capsule_laporair"
                android:text="LaporAir"
                android:textColor="#000000"
                android:textSize="28sp"
                android:fontFamily="@font/poppins_regular"
                android:textStyle="bold" />

        </FrameLayout>

        <!-- Subjudul -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adalah aplikasi air bersih dan sanitasi"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#888888"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Box Isi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_beranda"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:text="Aplikasi ini berfungsi sebagai pengaduan dari masyarakat yang berkesusahan dalam mendapatkan air bersih yang layak maupun untuk sanitasi pembuangan yang kurang layak kepada dinas terkait, dan dapat melihat laporan dari daerah yang sama halnya terdampak."
                android:fontFamily="@font/poppins_regular"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="https://laporair.com"
                android:textAlignment="center"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#009688"
                android:textSize="18sp"
                android:layout_marginBottom="16dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>