<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Judul LaporAir -->

        <!-- Gambar biru bulat -->

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="LaporAir"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Subjudul -->
        <ImageView
            android:id="@+id/imgBanner"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/img" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adalah aplikasi air bersih dan sanitasi"
            android:textColor="#888888"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Box Isi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_beranda"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aplikasi ini berfungsi sebagai pengaduan dari masyarakat yang berkesusahan dalam mendapatkan air bersih yang layak maupun untuk sanitasi pembuangan yang kurang layak kepada dinas terkait, dan dapat melihat laporan dari daerah yang sama halnya terdampak."
                android:textColor="#000000"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp" />

            <TextView
                android:id="@+id/tvLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="https://laporair.com"
                android:textColor="#888888"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:textAlignment="center" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
