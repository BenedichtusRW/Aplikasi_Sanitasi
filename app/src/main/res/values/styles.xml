<resources>
    <!-- Style dasar aplikasi -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Tambahan jika dibutuhkan -->
    </style>

    <!-- Hint Style -->
    <style name="HintTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Style khusus untuk TextInputLayout dengan password -->
    <style name="PasswordTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="endIconMode">password_toggle</item>
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleTint">@color/black</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
        <item name="textInputStyle">@style/CustomTextInput</item>
    </style>

    <!-- Custom style untuk semua TextInputLayout -->
    <style name="CustomTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/black</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <!-- Style tambahan untuk Login/Register Input -->
    <style name="LoginRegisterInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">30dp</item>
        <item name="boxCornerRadiusTopEnd">30dp</item>
        <item name="boxCornerRadiusBottomStart">30dp</item>
        <item name="boxCornerRadiusBottomEnd">30dp</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="startIconTint">@color/black</item>
        <item name="endIconTint">@color/black</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>
</resources>
